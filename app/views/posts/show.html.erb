<div class="col p-4 d-flex flex-column position-static">
	<strong class="d-inline-block md-2 text-primary"><%=@post.category.name%></strong>
</div>
<div class="col md-12">
	<div class="row">
		<div class="col md-6">
			<h1><%=@post.title%></h1>
		</div>
		<div class="md-1 text-muted"><%= @post.created_at.to_datetime.strftime("%B %d, at %I:%M ")%></div>
	</div>
	<p><%=@post.body%></p>
	<%=render "comments/form", object: @post%>
	<div class="my-3 p-3 bg-body rounded shadow-sm">
		<h6 class="border-bottom pb-2 mb-0">Коментарі</h6>
    	<%= render @post.comments%>
	</div>
</div>
